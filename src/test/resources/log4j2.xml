<?xml version="1.0" encoding="UTF-8"?>

<configuration status="INFO">

<Properties >
	<property name="basePath">./logs</property>
</Properties>

<Appenders>

	<Console name="Console" target="SYSTEM_OUT">
		<PatternLayout pattern="%d{HH:mm:ss:SSS} [%t] %-5level %logger{36} - %msg%n"></PatternLayout>
	 </Console>
	 
	 <RollingFile name="File" fileName="${basePath}/automation.log" filePattern="${basePath}/automation-%d{yyyy-MM-dd}.log">
	 	<PatternLayout pattern="%d{HH:mm:ss:SSS} [%t] %-5level %logger{36} - %msg%n"/>
	 	<SizeBasedTriggeringPolicy size="50000"/>	 		 
	 </RollingFile>

</Appenders>

<Loggers>
	
	<Root level="Debug"><!-- here we use multiple log level All<Trace<Debug<Info<Warn<Error<Fatal<Off --> 
		<!--<AppenderRef ref="console"/>  here we generate log in console-->
		<AppenderRef ref="File"/>  <!-- it shows we generate the log in file-->
	</Root>

</Loggers>



</configuration>